# Error Log Monitoring System Environment Configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# OpenSearch Configuration
OPENSEARCH_HOST=43.207.106.51
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=your_opensearch_username
OPENSEARCH_PASSWORD=your_opensearch_password
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX_PATTERN=error_issues_{site}_{year}_{month}

# RDS Database Configuration (for Vortexai data integrity checks)
RDS_HOST=your_rds_host_here
RDS_PORT=5432
RDS_DATABASE=vsaas_postsearch
RDS_USER=your_rds_username_here
RDS_PASSWORD=your_rds_password_here
RDS_SSL_MODE=require

# Vector Database Configuration
VECTOR_DB_PERSIST_DIRECTORY=./data/chroma_db
VECTOR_DB_COLLECTION_NAME=error_log_vectors
VECTOR_DB_DISTANCE_METRIC=cosine

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_CHUNKS=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_EMBEDDING_MODEL=text-embedding-3-small

# Processing Configuration
BATCH_SIZE=10
MAX_RETRIES=3
RETRY_DELAY=5

# Cost Optimization
COST_THRESHOLD_DAILY=100.0
ENABLE_COST_TRACKING=true

# Alerting Configuration
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_SEVERITY_THRESHOLD=HIGH

# Scheduling
CRON_SCHEDULE=0 6 * * *
TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
LOG_FILE=error_monitor.log
